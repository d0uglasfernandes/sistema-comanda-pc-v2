generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  ownerEmail String?
  
  // Stripe Integration
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  isActive             Boolean   @default(false)
  trialEndsAt          DateTime?
  subscriptionStatus   SubscriptionStatus @default(TRIAL)
  currentPeriodEnd     DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  users         User[]
  products      Product[]
  orders        Order[]
  subscriptions Subscription[]
  payments      Payment[]

  @@unique([id])
}

model Subscription {
  id                   String   @id @default(cuid())
  tenantId             String
  stripeSubscriptionId String   @unique
  status               SubscriptionStatus @default(TRIAL)
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean  @default(false)
  priceInCents         Int
  userCount            Int      @default(1)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

model Payment {
  id                  String        @id @default(cuid())
  tenantId            String
  stripeInvoiceId     String        @unique
  stripePaymentIntent String?
  amount              Int
  status              PaymentStatus @default(PENDING)
  paidAt              DateTime?
  failedAt            DateTime?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

model User {
  id           String   @id @default(cuid())
  email        String   
  name         String   
  passwordHash String   
  role         Role     @default(GARCOM)
  tenantId     String   
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relacionamento com Tenant
  tenant       Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([email, tenantId])
}

model Product {
  id           String       @id @default(cuid())
  name         String       
  priceInCents Int          
  category     String       @default("Outros")
  tenantId     String       
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Relacionamento com Tenant
  tenant       Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  items OrderItem[]

  @@index([tenantId])
  @@index([category])
}

model OrderItem {
  id         String @id @default(cuid())
  orderId    String
  productId  String
  quantity   Int
  unitPrice  Int
  createdAt  DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Order {
  id            String       @id @default(cuid())
  tableNumber   Int         
  status        OrderStatus  @default(OPEN)
  totalInCents  Int          @default(0)
  paymentMethod String?
  closedAt      DateTime?
  tenantId      String      
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relacionamento com Tenant
  tenant        Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  items OrderItem[]

  @@index([tenantId])
  @@index([status])
  @@index([createdAt])
  @@index([closedAt])
}

enum Role {
  ADMIN
  CAIXA
  GARCOM
}

enum OrderStatus {
  OPEN
  CLOSED
  PAID
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  CANCELED
}